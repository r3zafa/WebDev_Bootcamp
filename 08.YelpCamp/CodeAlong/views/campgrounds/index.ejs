<% layout('layouts/boilerplate') %>

    <div class="col-12">
        <p>
            <a href="/campgrounds/new" class='btn btn-sm btn-danger rounded-pill px-3 my-3 float-right'>
                    Add new campground
                </a>
        </p>
    </div>
    <div class="col-12">
        <ul class="list-group mt-2 mb-5">
            <% for( let camp of camps ) { %>
                <a href="/campgrounds/<%= camp.id %>" class="text-decoration-none">
                    <li class="list-group-item list-group-item-action">
                        <h5>
                            <b>
                                                Name:
                                            </b>
                            <%= camp.title %>
                                <b>
                                                - Location:
                                            </b>
                                <%= camp.location %>
                        </h5>
                    </li>
                </a>
                <% } %>
        </ul>
    </div>