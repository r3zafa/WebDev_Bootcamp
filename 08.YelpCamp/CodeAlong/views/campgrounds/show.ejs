<% layout('layouts/boilerplate') %>

    <div class="col-12">
        <a href="/campgrounds" class="btn btn-sm btn-dark rounded-pill text-white py-1 px-3">
            <b class="p-0 my-1">
                Back to Overview
            </b>
        </a>

        <div class="row my-5">
            <div class="col-md-8 offset-md-2 mb-3 col-lg-6 offset-lg-0">
                <div class="card bg-light border">
                    <div id="campCarousel" class="carousel slide m-0 p-0 shadow " data-ride="carousel">
                        <div class="carousel-inner card-img-div-height rounded-top m-0">
                            <% camp.images.forEach((img, i) =>{ %>
                                <div class="carousel-item <%= i === 0 ? 'active':'' %> ">
                                    <img src="<%= img.url %>" class="d-block rounded-top img-fit-content" alt="<%= camp.title %>">
                                </div>
                                <% }) %>
                        </div>

                        <% if(camp.images.length > 1){ %>
                            <button class="carousel-control-prev bg-transparent border-0" type="button" data-target="#campCarousel" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </button>
                            <button class="carousel-control-next bg-transparent border-0" type="button" data-target="#campCarousel" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </button>
                            <% } %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text p-0">
                            <div class="accordion p-0 m-0" id="accordionExample">
                                <div class="card p-0 m-0 border-0">
                                    <div class="card-header border-0 p-0 m-0" id="headingOne">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link text-decoration-none text-dark border-light shadow-sm p-0 m-0 w-100" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                    <% if (camp.description.length>= 60 ) { %>
                                                        <div class="row px-0 py-0 m-0 text-div-height">
                                                            <div class="col-11 px-3 py-2 mx-0 my-auto text-left">
                                                                <%= descriptionPreview %> 
                                                            </div>
                                                            <div class="col-1 p-0 m-auto">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                                                    <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                                                  </svg>
                                                                
                                                            </div>
                                                        </div>
                                                    <% } else { %>
                                                        <div class="row p-0 m-0 text-div-height">
                                                            <div class="col-12 px-2 py-2 mx-0 my-auto text-left">
                                                                <%= descriptionPreview %> 
                                                            </div>
                                                        </div>
                                                    <% } %>
                                            </button>
                                        </h5>
                                    </div>
                                    <% if (camp.description.length>=60) { %>
                                        <div id="collapseOne" class="collapse overflow-auto m-0 py-2" aria-labelledby="headingOne" data-parent="#accordionExample">
                                            <div class="card-body overflow-auto px-3 py-0 bg-white moreDescription-div-height">
                                                <%= descriptionMore %>
                                            </div>
                                        </div>
                                        <% } %>

                                </div>


                        </p>
                        </div>
                        <ul class="list-group list-group- py-3 mb-2">
                            <li class="list-group-item text-muted bg-gray-1"> location:
                                <%= camp.location %>
                            </li>
                            <li class="list-group-item bg-gray-1"> submitted by:
                                <%= camp.author.username %>
                            </li>
                            <li class="list-group-item bg-gray-1"> Price:
                                <%= camp.price %>â‚¬/night
                            </li>
                        </ul>
                        <% if(currentUser && camp.author._id.equals(currentUser._id)) { %>
                            <div class="card-body">
                                <a href="/campgrounds/<%= camp.id %>/edit " class="btn btn-sm btn-info text-white rounded-pill">
                            Edit Post
                        </a>
                                <form class="d-inline float-right" action="/campgrounds/<%= camp.id %>?_method=DELETE" method="post">
                                    <button class="btn btn-sm btn-danger rounded-pill text-white text-right">
                                Delete Post
                            </button>
                                </form>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-8 offset-md-2 mb-3 col-lg-6 offset-lg-0">
                <div class="card bg-light border">
                    <div id='map' class="card-img-div-height card-img-div-width rounded-top shadow"></div>


                    <div class="card-body mt-0 pt-3">
                        <form action="/campgrounds/<%= camp.id %>/reviews " method="post" novalidate class="needs-validation rounded w-100">
                            <h5 class="form-text">Leave a review</h5>
                            <div class="form-group m-0 p-0">
                                <fieldset class="starability-basic">
                                    <!-- <legend>Rating:</legend> -->
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>

                            </div>
                            <div class="mb-3">
                                <label for="review">Review</label>
                                <textarea class="form-control" cols="30" rows="3" name="review[body]" id="review" placeholder="add your review" required></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please fill this section with some text
                                </div>

                            </div>


                            <div class="form-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                    <label class="form-check-label" for="invalidCheck">
                        Agree to terms and conditions
                      </label>
                                    <div class="invalid-feedback">
                                        You must agree before submitting.
                                    </div>
                                </div>
                            </div>

                            <div class="mb-1">
                                <button class="btn btn-primary ">Send</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

            <div class="col-12 my-3">
                <h3 class="mb-3">reviews</h3>
                <div class="row">
                    <% for( let review of camp.reviews ) { %>
                        <div class="col-md-6">

                            <div class="card my-1">
                                <div class="card-body">
                                    <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                                        <form action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE" method="post">
                                            <button class="close">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="text-danger-1 bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                        </svg>
                                    </button>
                                        </form>
                                        <% } %>
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated:
                                                <%= review.rating %> stars
                                            </p>

                                            <h4 class="card-title">
                                                <%= review.author.username %>
                                            </h4>
                                            <p class="card-text">
                                                <%= review.body %>
                                            </p>

                                </div>
                            </div>
                        </div>

                        <% } %>


                </div>

            </div>
        </div>
    </div>

    <script>
        const mapBoxToken = '<%- mapBoxToken %>';
        const geoData = [<%- geoData %>];
        const campTitle = '<%- camp.title %>';
        const campLocation = '<%= camp.location %>';
    </script>
    <script src='/js/showpageMap.js'></script>