<% layout('layouts/boilerplate') %>

    <div class="col-12">
        <a href="/campgrounds" class="btn btn-sm btn-dark rounded-pill text-white py-1 px-3">
            <b class="p-0 my-1">
            Back to Overview
        </b>
        </a>


        <div class="row my-5">
            <div class="col-md-8 col-lg-6">
                <div id="campCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% camp.images.forEach((img, i) =>{ %>
                            <div class="carousel-item <%= i === 0 ? 'active':'' %> ">
                                <img src="<%= img.url %>" class="d-block w-100" alt="<%= camp.title %>">
                            </div>
                            <% }) %>
                    </div>

                    <% if(camp.images.length > 1){ %>
                        <button class="carousel-control-prev bg-transparent border-0" type="button" data-target="#campCarousel" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </button>
                        <button class="carousel-control-next bg-transparent border-0" type="button" data-target="#campCarousel" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </button>
                        <% } %>
                </div>
                <div class="card bg-gray-2 border-0">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted bg-gray-1"> location:
                            <%= camp.location %>
                        </li>
                        <li class="list-group-item bg-gray-1"> submitted by:
                            <%= camp.author.username %>
                        </li>
                        <li class="list-group-item bg-gray-1"> Price:
                            <%= camp.price %>â‚¬/night
                        </li>
                    </ul>
                    <% if(currentUser && camp.author._id.equals(currentUser._id)) { %>
                        <div class="card-body">
                            <a href="/campgrounds/<%= camp.id %>/edit " class="btn btn-sm btn-info text-white rounded-pill">
                            Edit Post
                        </a>
                            <form class="d-inline float-right" action="/campgrounds/<%= camp.id %>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-danger rounded-pill text-white text-right">
                                Delete Post
                            </button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>

            <div class="col-md-8 col-lg-6">

                <% if(currentUser) { %>
                    <form action="/campgrounds/<%= camp.id %>/reviews " method="post" novalidate class="needs-validation bg-gray-2 border p-3 rounded">

                        <h2 class="form-text">Leave a review</h2>
                        <div class="form-group">
                            <fieldset class="starability-basic">
                                <!-- <legend>Rating:</legend> -->
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>

                        </div>
                        <div class="mb-3">
                            <label for="review">Review</label>
                            <textarea class="form-control" cols="30" rows="3" name="review[body]" id="review" placeholder="add your review" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill this section with some text
                            </div>

                        </div>


                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label" for="invalidCheck">
                            Agree to terms and conditions
                          </label>
                                <div class="invalid-feedback">
                                    You must agree before submitting.
                                </div>
                            </div>
                        </div>

                        <div class="mb-1">
                            <button class="btn btn-success rounded-pill">send</button>
                        </div>
                    </form>

                    <% } else { %>
                        <div class="card bg-gray-1 p-4 border-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="10rem" height="10rem" fill="currentColor" class="bi bi-lock-fill card-img-top text-secondary" viewBox="0 0 16 16">
                                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                              </svg>
                            <div class="card-body">
                                <h3 class="card-text text-center text-secondary">
                                    Sign in to send a review.
                                </h3>
                            </div>
                        </div>

                        <% } %>

                            <h3 class="my-3">reviews</h3>
                            <% for( let review of camp.reviews ) { %>
                                <div class="card mt-3">
                                    <div class="card-body">
                                        <h3 class="card-title">
                                            <%= review.author.username %>
                                        </h3>
                                        <p class="starability-result" data-rating="<%= review.rating %>">
                                            Rated:
                                            <%= review.rating %> stars
                                        </p>

                                        <p class="card-text">
                                            <%= review.body %>
                                        </p>
                                        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                                            <form action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE" method="post">
                                                <button class="close">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="text-danger-1 bi bi-trash-fill" viewBox="0 0 16 16">
                                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                                          </svg>
                                                    </button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
            </div>

        </div>
    </div>